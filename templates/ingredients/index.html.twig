{% extends 'base.html.twig' %}
{% block title%} Liste des Ingredient{% endblock %}

{% block body %}
 {% if ingredients %}
    <table id="ingredients" class="table table-striped">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Prix</th>
          <th>Catégorie</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for ingredient in ingredients %}
          <tr>
            <td>{{ ingredient.name }}</td>
            <td>{{ ingredient.prix }} €</td>
             <td>{{ ingredient.categorie.name }}</td>
           <td>
              <a href="/ingredient/{{ ingredient.id }}" class="btn btn-dark">Détails</a>
              <a href="/ingredient/edit/{{ ingredient.id }}" class="btn btn-dark">Modifier</a>
              <a href="/ingredient/delete/{{ ingredient.id }}" class="btn btn-danger" 
              onclick="return confirm('Etes-vous sûr de supprimer cet ingredient?');">Supprimer</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Aucun ingredient</p>
  {% endif %} 
{% endblock %}
